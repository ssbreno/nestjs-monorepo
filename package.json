{
  "name": "nestjs-monorepo",
  "private": true,
  "scripts": {
    "build": "nx run-many --target=build",
    "dev": "nx run-many --target=serve --parallel=true",
    "format": "nx format:write",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "prepare": "husky install",
    "test": "nx affected:test",
    "lint": "nx affected:lint",
    "format:check": "nx format:check",
    "format:write": "nx format:write",
    "commit": "git-cz",
    "create:app": "nx g @nrwl/nest:app",
    "create:lib": "nx g @nrwl/nest:lib",
    "prisma:generate": "nx run-many --target=prisma:generate"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nrwl/cli": "^15.9.3",
    "@nrwl/nest": "^19.8.4",
    "@nrwl/workspace": "^19.8.4",
    "@nx/eslint": "19.8.4",
    "@nx/eslint-plugin": "19.8.4",
    "@nx/jest": "19.8.4",
    "@nx/js": "19.8.4",
    "@nx/nest": "19.8.4",
    "@nx/node": "19.8.4",
    "@nx/web": "19.8.4",
    "@nx/webpack": "19.8.4",
    "@prisma/client": "^6.2.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/cli-color": "^2.0.6",
    "@types/fastify-multipart": "^0.7.2",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.12",
    "@types/node": "~18.16.9",
    "commitizen": "^4.3.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.3.0",
    "nx": "20.3.1",
    "prettier": "^3.1.0",
    "prisma": "^6.2.1",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/request-context": "^6.0.2",
    "@fastify/static": "^7.0.4",
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/platform-fastify": "^10.4.15",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/terminus": "^10.2.3",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cli-color": "^2.0.4",
    "fastify": "^5.2.1",
    "fastify-multer": "^2.0.3",
    "fastify-multipart": "^5.4.0",
    "git-cz": "^4.9.0",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^5.0.0",
    "tslib": "^2.3.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write .",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
